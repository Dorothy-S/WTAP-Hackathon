    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Filter courses by category
            const filterButtons = document.querySelectorAll('.filter-btn');
            const courseCards = document.querySelectorAll('.course-card');
            
            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    
                    // Add active class to clicked button
                    this.classList.add('active');
                    
                    const filterValue = this.getAttribute('data-filter');
                    
                    // Show/hide course cards based on filter
                    courseCards.forEach(card => {
                        if (filterValue === 'all' || card.getAttribute('data-category') === filterValue) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                });
            });
            
            // Enroll button functionality
            const enrollButtons = document.querySelectorAll('.btn-enroll');
            
            enrollButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const courseTitle = this.closest('.course-card').querySelector('.course-title').textContent;
                    
                    // In a real application, this would redirect to enrollment or show a modal
                    alert(`Enrolling in: ${courseTitle}\n\nThis would redirect you to the enrollment page in a real application.`);
                    
                    // You could also trigger a modal or redirect:
                    // window.location.href = '/enroll?course=' + encodeURIComponent(courseTitle);
                });
            });
            
            // Start Learning Path button
            const startPathBtn = document.querySelector('.btn-primary');
            
            startPathBtn.addEventListener('click', function() {
                // In a real application, this would start the learning path
                alert('Starting the Backend Developer Learning Path!\n\nYou will be guided through the recommended course sequence.');
                
                // You could also track this event and redirect to the first course
                // window.location.href = '/learning-path/backend-developer/start';
            });
            
            // Mentor item click functionality
            const mentorItems = document.querySelectorAll('.mentor-item');
            
            mentorItems.forEach(item => {
                item.addEventListener('click', function() {
                    const mentorName = this.querySelector('.mentor-name').textContent;
                    
                    // In a real application, this would show mentor details or start a conversation
                    alert(`Viewing mentor profile: ${mentorName}\n\nThis would open the mentor's profile page in a real application.`);
                });
            });
            
            // Simulate course recommendation calculation
            function calculateRecommendationPercentage(courseElement) {
                // In a real application, this would come from an API
                // For demo purposes, we'll just use the existing percentage
                const recommendElement = courseElement.querySelector('.course-stat:nth-child(2) .course-stat-value');
                return parseInt(recommendElement.textContent);
            }
            
            // Sort courses by recommendation percentage (optional feature)
            const sortByRecommendationBtn = document.createElement('button');
            sortByRecommendationBtn.className = 'filter-btn';
            sortByRecommendationBtn.textContent = 'Sort by Recommendation';
            
            sortByRecommendationBtn.addEventListener('click', function() {
                const coursesContainer = document.querySelector('.courses-grid');
                const courses = Array.from(coursesContainer.querySelectorAll('.course-card'));
                
                // Sort courses by recommendation percentage (descending)
                courses.sort((a, b) => {
                    const aRec = calculateRecommendationPercentage(a);
                    const bRec = calculateRecommendationPercentage(b);
                    return bRec - aRec;
                });
                
                // Re-append courses in sorted order
                courses.forEach(course => {
                    coursesContainer.appendChild(course);
                });
                
                alert('Courses sorted by recommendation percentage!');
            });
            
            // Add the sort button to the filter section
            document.querySelector('.courses-filter').appendChild(sortByRecommendationBtn);
        });
    </script>
</body>
</html>
